
{namespace vv}

/**
 * Login page.
 */
{template .login}

  <div ng-controller="accounts.LoginCtrl as ctrl">
    <div class="alert alert-danger" ng-show="ctrl.error">El usuario o contrase単a son incorrectos</div>

    <ajax-form submit="ctrl.submit()">
      <form-group name="user">
        <label class="control-label" for="user">Usuario</label>
        <input class="form-control" id="user" type="text" name="user" ng-model="ctrl.data.user" required>
        
        <form-errors>
          <form-error when="required">Escribe el nombre de usuario para entrar</form-error>
        </form-errors>
      </form-group>
      
      <form-group name="password">
        <label class="control-label" for="password">Contrase単a</label>
        <input class="form-control" id="password" type="password" name="password" ng-model="ctrl.data.password" required ng-minlength="8">

        <form-errors>
          <form-error when="required">Escribe la contrase単a</form-error>
          <form-error when="minlength">La contrase単a es demasiado corta</form-error>
        </form-errors>
      </form-group>

      <form-submit>Enviar</form-submit>
    </ajax-form>
  </div>



{/template}